$(document).ready(function () {
  $("#search").on("keyup", function(event) {
    var src_str = $(this).val();
    if (src_str.length >= 1) {
      $("p:contains(" + src_str + ")").parent(".leaf").css( "border", "3px solid red" );
      $("p:not(:contains(" + src_str + "))").parent(".leaf").css( "border", "1px solid #1C2528" );
    } else {
      $("p").parent(".leaf").css( "border", "1px solid #1C2528" );
    }
  });
});
