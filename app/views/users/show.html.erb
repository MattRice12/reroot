<h1 class="headinger"> <%=  "#{user.name.capitalize}'s profile:"  %>

<h2> Teams: </h2>
<% if user.teams.any? %>
  <ol>
    <h4 class="indent">
      <% user.teams.each do |team| %>
        <% if current_user.id == team.user_id %>
          <li>
            <span class="create-tab leader-badge">
            <%= link_to team.name, team_path(team), title: team.name %>
            <img src="https://cdn0.iconfinder.com/data/icons/awards-7/500/award_bravery--512.png" alt="Leader Image" title="Team Captain" />
            <span class="small-text"></span>
            <span class="small-text"><i><%= "#{team.users.count} members" %></i></span>
          </li>
        <% else %>
          <li>
            <%= link_to team.name, team_path(team), title: team.name %>
            <span class="small-text"><i><%= "#{team.users.count} members" %></i></span>
          </li>
        <% end %>
      <% end %>
    </h4>
  </ol>
<% else %>
  <h4 class="indent"> None </h4>
<% end %>

<h2> <%= "#{user.name.capitalize}'s stats" %>
  <ul class="indent">
    <li class="medium-text"> Total Trees: <%= user.trees.count %> </li>
    <li class="medium-text"> Total Tabs: <%= user.tabs.count %> </li>
  </ul>
</h2>
