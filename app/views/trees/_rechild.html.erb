<% children.each do |child| %>
  <div class="branch">
    <h3 class="btn leaf"><%= link_to truncate(child.name, length: 12), url_with_protocol(child.url) %>
      <div>
        <span><%= link_to "a", edit_tab_path(child, parent_tab_id: child.parent_tab_id), class: 'btn add-del-edit edit' %></span>
        <span> <%= link_to "+", new_tab_path(parent_tab_id: child.id), class: 'btn add-del-edit add' %></span>
        <span> <%= link_to "x", tab_path(child), method: :delete, class: 'btn add-del-edit del' %></span>
      </div>
    </h3> <%# first set of branches %>
    <%= render( partial: 'rechild', locals: { children: child.children }) if child.children %>
  </div>
<% end %>
