<% children.each do |child| %>
  <div class="branch">
    <h3><%= link_to child.name, child.url, class: 'btn leaf' %>
      <div>
        <span> <%= link_to "+", new_tab_path(parent_tab_id: child.id), class: 'btn sub-add' %></span>
        <span> <%= link_to "x", tab_path(child), method: :delete, class: 'btn sub-del' %></span>
      </div>
    </h3> <%# first set of branches %>
    <%= render( partial: 'rechild', locals: { children: child.children }) if child.children %>
  </div>
<% end %>
